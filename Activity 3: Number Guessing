package gssgm;
import java.util.*;
/**
 *
 * @author CC2_1D-22
 */
public class Gssgm {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner guess = new Scanner(System.in);
    
        int correctnumber = 7;
        int answer;
        
        do{
        System.out.println("Guess the Correct Number that was put here on the Program"
                + "\nYour Range is 1-1000");
        System.out.println("\n\n\n\n\n\n\n\n\n\n");
        System.out.println("What is your Guess?:");
        answer = guess.nextInt();
              
        if (answer>correctnumber & answer%2==0){
            System.out.println("Wrong Number.Higher Number Pls");
            System.out.println("It's a Even Number");
        }
        else if(answer<correctnumber){
            System.out.println("Wrong Number.Its Odd");
            System.out.println("Its a Odd Number");
        }
        else {
            System.out.println("CONGRATS. YOU GUESSED THE CORRECT NUMBER!");
            }
        }
        while(correctnumber!=answer);{
            }
    }
}
        

        
        
            
           
        
 
